<!DOCTYPE html>
<html lang="en">
<head>

    <script>
     $sexo = prompt ("digite [M] para masculino ou [F] para feminino:")
    switch ($sexo) 
    {
        case "m" :
        case "M" :
            document.write ("Masculino / Homem")
            break;

        case "f" :
        case "F" :
            document.write ("Feminino / Mulher")
            break;

        default:  
        document.write ("Opcão Inválida")
        break;
            
    
    }

    </script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
</body>
</html>